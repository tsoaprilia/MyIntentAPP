<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andorid="http://schemas.android.com/apk/res/android"
    andorid:layout_width="match_parent"
    andorid:layout_height="match_parent"
    andorid:orientation="vertical"
    andorid:paddingLeft="@dimen/activity_horizontal_margin"
    andorid:paddingTop="@dimen/activity_vertical_margin"
    andorid:paddingRight="@dimen/activity_horizontal_margin"
    andorid:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        andorid:id="@+id/btn_move_activity"
        andorid:layout_width="match_parent"
        andorid:layout_height="wrap_content"
        andorid:layout_marginBottom="@dimen/activity_vertical_margin"
        andorid:text="@string/move_activity" />

    <Button
        andorid:id="@+id/btn_move_activity_data"
        andorid:layout_width="match_parent"
        andorid:layout_height="wrap_content"
        andorid:layout_marginBottom="@dimen/activity_vertical_margin"
        andorid:text="@string/move_with_data" />

    <Button
        andorid:id="@+id/btn_dial_number"
        andorid:layout_width="match_parent"
        andorid:layout_height="wrap_content"
        andorid:layout_marginBottom="@dimen/activity_vertical_margin"
        andorid:text="@string/dial_number" />
</LinearLayout>
